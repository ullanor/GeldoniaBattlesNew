<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/hillybackground"
    android:columnCount="7"
    android:padding="5dp"
    android:rowCount="3"
    tools:context=".BattleActivity">

    <!--<include
        android:id="@+id/appbar"
        layout="@layout/app_bar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="center"/>-->

    <!-- defenders -->
    <LinearLayout
        android:id="@+id/defBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/def6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/defFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/def1"
            android:tag="1-def"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/def4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />

        <ImageView
            android:id="@+id/def5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/bluefis" />
    </LinearLayout>

    <ImageView
        android:id="@+id/defCannon"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/bluecannon" />

    <!-- enemy -->
    <LinearLayout
        android:id="@+id/eneFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_row="1"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ene1"
            android:tag="dupek1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene2"
            android:tag="dupek2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eneBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="1"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ene6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />

        <ImageView
            android:id="@+id/ene10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:src="@drawable/redfis" />
    </LinearLayout>

    <ImageView
        android:id="@+id/eneCannon"
        android:layout_column="5"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/redcannon" />

    <!-- fire and retreat -->
    <ImageView
        android:id="@+id/defCloud"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_width="75dp"
        android:layout_height="300dp"
        android:layout_gravity="left"
        android:layout_rowSpan="2"
        app:srcCompat="@drawable/firingcloud" />
    <ImageView
        android:id="@+id/eneCloud"
        android:layout_column="4"
        android:layout_row="1"
        android:layout_width="75dp"
        android:layout_height="300dp"
        android:layout_gravity="right"
        android:layout_rowSpan="2"
        app:srcCompat="@drawable/firingcloud" />

    <LinearLayout
        android:id="@+id/BattleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/fireButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:shadowColor="#000000"
            android:text="~ Fire! ~"
            android:textColor="#FF0000"
            android:textColorHighlight="#FF9800"
            android:textColorLink="#FFEB3B"
            android:textSize="20dp" />

        <Button
            android:id="@+id/moveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="~ Move! ~" />

        <TextView
            android:id="@+id/battleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A31814"
            android:ems="10"
            android:inputType="textMultiLine|textPersonName|textImeMultiLine"
            android:text="The battle has started!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>


</GridLayout>