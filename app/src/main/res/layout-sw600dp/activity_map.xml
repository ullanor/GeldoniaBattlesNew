<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E6EA7"
    tools:context=".MapActivity">

    <GridLayout
        android:layout_width="900dp"
        android:layout_height="500dp"
        android:background="@drawable/world_map"
        android:columnCount="6"
        android:rowCount="6">


        <ImageButton
            android:id="@+id/location0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitStart"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitEnd"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitEnd"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="right"
            app:srcCompat="@drawable/flag_orc"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/flag_orc"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/flag_orc"
            android:scaleType="fitStart"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="3"
            app:srcCompat="@drawable/flag_demon"
            android:scaleType="fitStart"
            android:background="@null"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/location8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="3"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitEnd"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_marginLeft="70dp"
            app:srcCompat="@drawable/flag_demon"
            android:scaleType="fitStart"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="5"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/flag_demon"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/location12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="5"
            app:srcCompat="@drawable/flag_red"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/waitButton"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:background="#305C69"
            android:scaleType="fitCenter"
            android:text="WAIT"
            android:textColor="#FF9800"
            android:textSize="30sp" />
    </GridLayout>
</LinearLayout>